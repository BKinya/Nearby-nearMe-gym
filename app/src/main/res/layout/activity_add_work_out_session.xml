<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Add_work_out_session">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginVertical="@dimen/margin_vertical">

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_workout_session_txt"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:padding="@dimen/view_padding"/>

        <Button
            android:id="@+id/date_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_txt"
            android:layout_below="@+id/txt_header"/>


        <EditText
            android:id="@+id/date_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/date_btn"
            android:layout_alignStart="@+id/date_btn"
            android:layout_below="@+id/date_btn"
            android:hint="@string/date_edit_txt"/>



        <Spinner
            android:id="@+id/exercise_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_txt_view" />

        <EditText
            android:id="@+id/no_of_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exercise_cat"
            android:hint="@string/no_of_sets_txt"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_of_sets"
            android:text="@string/save_btn" />


    </RelativeLayout>


</ScrollView>